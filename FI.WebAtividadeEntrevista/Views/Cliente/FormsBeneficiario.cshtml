
<div class="modal fade" id="modal-beneficiarios">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">Beneficiários</h4>
            </div>
            <div class="modal-body">

                <!-- conteudo formulario -->

                <form id="formCadastroBeneficiario" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="Sobrenome">CPF:</label>
                                <input required="required" type="text" class="form-control" id="CpfBeneficiario" name="CpfBeneficiario" placeholder="Ex.: 000.000.000-00" maxlength="15">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="Nome">Nome:</label>
                                <input required="required" type="text" class="form-control" id="NomeBeneficiario" name="NomeBeneficiario" placeholder="Ex.: João" maxlength="50">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <table id="gridBeneficiarios" class="table"></table>
                </form>

                <!-- conteudo formulario -->

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>



